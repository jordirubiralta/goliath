<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.jrubiralta.goliath">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:name="com.jrubiralta.goliath.App"
            android:allowBackup="true"
            android:label="@string/app_name"
            android:icon="@mipmap/ic_launcher"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity
                android:name="com.jrubiralta.goliath.ui.activity.splash.SplashActivity"
                android:screenOrientation="behind"
                android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.jrubiralta.goliath.ui.activity.home.HomeActivity"
                android:screenOrientation="behind"
                android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name="com.jrubiralta.goliath.ui.activity.product.ProductDetailActivity"
            android:screenOrientation="behind"
            android:theme="@style/AppTheme">
        </activity>

    </application>
</manifest>
